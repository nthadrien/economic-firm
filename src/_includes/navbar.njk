{% set activePage = page.url %}

<nav aria-label="Primary" class='p-container'>

    <button id="hamburger">
        <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" viewbox="0 0 24 24">
            <path fill="lightgray" d="M3 6h18v2H3V6m0 5h18v2H3v-2m0 5h18v2H3v-2Z"/>
        </svg>
    </button>

    <p class='logo'>
        <i>Logo</i>
        Business Plan cm
    </p>

    <div class='nav-links'>
        {% for item in navigation[page.lang] %}
            <a href="{{ item.url | url }}">{{ item.text }}</a>
        {% endfor %}
    </div>

    <div style="color:white;">
        <a href="{{ page.url|url }}" lang="{{ page.lang }}" hreflang="{{ page.lang }}">
            {{ page.lang | capitalize }}
        </a>
        |
        {% for link in page.url | locale_links %}
            <a href="{{ link.url | url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">
                {{ link.lang | capitalize }}</a>
        {% endfor %}
    </div>
</nav>